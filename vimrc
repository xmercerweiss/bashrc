syntax on
set autoindent
set noexpandtab
set copyindent
set preserveindent
set softtabstop=0
set shiftwidth=4
set tabstop=4
set number
set showmatch
set showcmd
autocmd FileType c,cpp,java,python setlocal et

set cursorline
highlight CursorLine cterm=bold ctermbg=white ctermfg=black
highlight CursorLineNr cterm=bold ctermbg=white ctermfg=black
